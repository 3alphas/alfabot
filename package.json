{
  "name": "alfabot",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "parcel build --no-source-maps -d dist/web src/web/index.html",
    "dev:bot": "tsnd --transpileOnly --respawn src/bot",
    "dev:web": "tsnd --transpileOnly --respawn src/web/bundler.ts",
    "dev": "run-p dev:*",
    "start:bot": "tsnd src/bot",
    "start:web": "tsnd src/web",
    "start": "run-s dev"
  },
  "dependencies": {
    "dateformat": "^3.0.3",
    "dayjs": "^1.8.15",
    "dotenv": "^8.0.0",
    "emotion": "^9.1.3",
    "node-fetch": "^2.6.0",
    "node-schedule": "^1.3.0",
    "node-telegram-bot-api": "^0.30.0",
    "parcel-bundler": "^1.12.3",
    "parse-duration": "^0.1.1",
    "pg": "^7.12.1",
    "query-string": "^6.8.2",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "signale": "^1.3.0",
    "socket.io": "^2.2.0",
    "socket.io-client": "^2.2.0",
    "styled-components": "^4.3.2"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "@emotion/core": "^10.0.15",
    "@emotion/styled": "^10.0.15",
    "@emotion/types": "^0.7.0",
    "@types/dateformat": "^3.0.0",
    "@types/dotenv": "^6.1.1",
    "@types/node-fetch": "^2.5.0",
    "@types/node-schedule": "^1.2.2",
    "@types/node-telegram-bot-api": "^0.31.0",
    "@types/pg": "^7.4.14",
    "@types/react": "^16.9.1",
    "@types/react-dom": "^16.8.5",
    "@types/signale": "^1.2.0",
    "@types/socket.io": "^2.1.2",
    "@types/socket.io-client": "^1.4.32",
    "@types/styled-components": "^4.1.18",
    "husky": "^3.0.3",
    "lint-staged": "^9.2.1",
    "npm-run-all": "^4.1.3",
    "parcel-plugin-purgecss": "^2.1.2",
    "prettier": "^1.18.2",
    "sass": "^1.22.9",
    "sync-dotenv": "^2.2.1",
    "ts-node-dev": "^1.0.0-pre.40",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.5.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && sync-dotenv"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,css,json,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
